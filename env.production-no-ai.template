# AI+ Disabled Production Configuration
# Copy this to .env for production deployment without AI+ services

# ==================================
# CORE APPLICATION
# ==================================
NODE_ENV=production
PORT=3001
DATABASE_URL=postgresql://username:password@localhost:5432/ai2_production

# ==================================
# FEATURE FLAGS - AI+ DISABLED
# ==================================
# AI Features - DISABLED
ENABLE_AI=false
ENABLE_AI_CATEGORIES=false
ENABLE_AI_TAX_DEDUCTION=false
ENABLE_AI_INSIGHTS=false
ENABLE_AI_REPORTING=false
ENABLE_AI_ANALYSIS=false

# Analytics Features - ENABLED
ENABLE_ANALYTICS=true
ENABLE_ADVANCED_REPORTING=true
ENABLE_DASHBOARD=true
ENABLE_EXPORTS=true

# Core Features - ENABLED
ENABLE_CORE=true
ENABLE_TRANSACTION_IMPORT=true
ENABLE_MANUAL_TRANSACTIONS=true
ENABLE_CATEGORY_MANAGEMENT=true
ENABLE_CSV_IMPORT=true

# Subscription Features - ENABLED
ENABLE_SUBSCRIPTION=true
ENABLE_PRICING=true
ENABLE_USAGE_TRACKING=true

# ==================================
# SERVICE ENDPOINTS
# ==================================
# Core service (always enabled)
CORE_ENDPOINT=http://localhost:3001

# Analytics service (enabled)
ANALYTICS_ENDPOINT=http://localhost:3004

# AI service (disabled - will not be called)
AI_ENDPOINT=http://localhost:3002

# Subscription service (enabled)
SUBSCRIPTION_ENDPOINT=http://localhost:3010

# ==================================
# JWT & SECURITY
# ==================================
JWT_SECRET=your-production-jwt-secret-key
SESSION_SECRET=your-production-session-secret
BCRYPT_ROUNDS=12

# ==================================
# OPENAI (Not used when AI disabled)
# ==================================
OPENAI_API_KEY=not-required-when-ai-disabled

# ==================================
# DATABASE
# ==================================
DATABASE_URL=postgresql://username:password@localhost:5432/ai2_production

# ==================================
# LOGGING
# ==================================
LOG_LEVEL=info
LOG_FORMAT=json
