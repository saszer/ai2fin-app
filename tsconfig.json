{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@ai2/shared/*": ["shared/src/*"],
      "@ai2/shared": ["shared/src/index"],
      "@ai2/core/*": ["ai2-core-app/src/*"],
      "@ai2/core": ["ai2-core-app/src/index"],
      "@ai2/ai/*": ["ai2-ai-modules/src/*"],
      "@ai2/ai": ["ai2-ai-modules/src/index"],
      "@ai2/subscription/*": ["ai2-subscription-service/src/*"],
      "@ai2/subscription": ["ai2-subscription-service/src/index"],
      "@ai2/connectors/*": ["ai2-connectors/src/*"],
      "@ai2/connectors": ["ai2-connectors/src/index"],
      "@ai2/analytics/*": ["ai2-analytics/src/*"],
      "@ai2/analytics": ["ai2-analytics/src/index"],
      "@ai2/notifications/*": ["ai2-notifications/src/*"],
      "@ai2/notifications": ["ai2-notifications/src/index"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "references": [
    { "path": "./shared" },
    { "path": "./ai2-core-app" },
    { "path": "./ai2-ai-modules" },
    { "path": "./ai2-subscription-service" },
    { "path": "./ai2-connectors" },
    { "path": "./ai2-analytics" },
    { "path": "./ai2-notifications" }
  ],
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**",
    "**/tests/**"
  ]
} 